<library path="libiop_discovery_fkie">
  <class name="Discovery" type="iop::DiscoveryPlugin" base_class_type="iop::PluginInterface">
    <description>
      Discovery Service Plugin
    </description>
    <iop_service name="Discovery" id="urn:jaus:jss:core:Discovery" version="1.1">
      <inherits_from id="urn:jaus:jss:core:Events" min_version="1.0"/>
    </iop_service>
  </class>
  <class name="DiscoveryClient" type="iop::DiscoveryClientPlugin" base_class_type="iop::PluginInterface">
    <description>
      Discovery client Service Plugin, used e.g. by OCU
    </description>
    <iop_service name="DiscoveryClient" id="urn:jaus:jss:core:DiscoveryClient" version="1.1">
      <inherits_from id="urn:jaus:jss:core:EventsClient" min_version="1.0"/>
    </iop_service>
  </class>
</library>